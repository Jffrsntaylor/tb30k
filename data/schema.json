{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Unit",
  "type": "object",
  "properties": {
    "name": {"type": "string"},
    "base_cost": {"type": "integer"},
    "faction": {"type": "string"},
    "weapons": {"type": "array", "items": {"type": "string"}},
    "options": {"type": "array"},
    "rules": {"type": "array", "items": {"type": "string"}}
  },
  "required": ["name", "base_cost"]
}
